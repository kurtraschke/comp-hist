#!/usr/bin/perl -wP

#include[parse.h]

print("graph: { \n");
print("title: \"The Computer Family Tree\"\n");
print("\n");

#Draw the visible years
print("graph: {\ntitle: years\nlabel: \"Years in the History of Computing\"\nshape: rhomb");
for($i = $minyear; $i <= $maxyear; $i++){
    $d="$i.00"; $Date{$d}{$d}=$d; $Name{$d}=$d; $j=++$i;
    $Date{$d}{$i}=$i; $Name{$i}=$i;
    print("edge: { sourcename: $i targetname: $j }\n");
}

